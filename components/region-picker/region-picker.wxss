@import "../animation.wxss";

.region-picker {
  width: 100%;
  display: flex;
  flex-direction: column;
  height: 100%;
  background-color: transparent;
  box-sizing: border-box;
  position: absolute;
  z-index: 9999;
  bottom: 0;
}

.region-picker-mask {
  flex: 1;
}

.region-picker-content {
    height:345px;
  background-color: white;
  display: flex;
  flex-direction: column;
}

.region-picker-mask-fade-in {
  opacity: 0.3;
  background-color: #000;
}

.region-picker-mask-fade-out {
  opacity: 1;
  background-color: transparent;
}

.region-picker-content-fade-in {
  animation: fadeInUp 0.3s;
}

.region-picker-content-fade-out {
  animation: fadeOutDown 0.3s;
}

.region-picker-content-head {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0;
  box-sizing: border-box;
  height: 40px;
  line-height: 35px;
  text-align: center;
  border-bottom: solid 1px #ccc;
  padding: 4px 5px 1px 5px;
}

.region-picker-selected {
  flex: 4;
  display: flex;
  align-items: center;
  justify-content: space-between;
  margin: 0;
  box-sizing: border-box;
}

.region-picker-selected-province{
    flex: 1;
  text-align: center;
  font-size: 14px;
}
.region-picker-selected-city,
.region-picker-selected-area {
  flex: 2;
  text-align: center;
  font-size: 14px;
}
.selected-value {
    font-size: 16px;
    background-color: #f5f5f5;
    border: solid 1px #ccc;
    border-bottom: solid 1px #f5f5f5;
}
.ok-button{
    margin-left: 5px;
}
.region-picker-content-body {
  flex: 1;
  padding: 10px;
  box-sizing: border-box;
  height:300px;
}
.region-picker-content-body-fade-in-left {
  animation: fadeInLeft 0.3s;
}
.region-picker-content-body-fade-in-right {
  animation: fadeInRight 0.3s;
}
.region-picker-content-body-fade-out-right {
  animation: fadeOutRight 0.3s;
}
.region-picker-content-body-fade-out-left {
  animation: fadeOutLeft 0.3s;
}
.region-picker-item{
    width: 100%;
    height: 30px;
    line-height: 30px;
    padding: 0 10px;
    color:#888;
    box-sizing: border-box;
    font-size: 12px;
}
.region-picker-item-active{
    color:#333;
    border-bottom: solid 1px #ccc;
    font-size: 14px;
}