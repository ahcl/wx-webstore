@import "../animation.wxss";
.toast-area {
    position: fixed;
    width: 100%;
    height: 100%;
    z-index: 99;
}

.toast-message {
    box-sizing: border-box;
    position: fixed;
    z-index: 999;
    left: 50%;
    top: 50%;
    width: 250rpx;
    height: 250rpx;
    padding: 20rpx;
    margin-top: -125rpx;
    margin-left: -125rpx;
    display: flex;
    justify-content: center;
    flex-direction: column;
    align-items: center;
    border-radius: 16rpx;
    background-color: rgba(0, 0, 0, .75);
    color: #fff;
    animation: fadeIn .7s;
}

.toast-message-content {
    margin-top: 15rpx;
    text-align: center;
}