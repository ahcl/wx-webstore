.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 100%;
  background-image: url('/images/user-info-bg.jpg');
  background-size:100% 100%;
  height: 160px;
  box-sizing: border-box;
}
.userinfo-space-top{
  flex: 2;
}
.userinfo-avatar-c{
  flex: 5;
}
.userinfo-avatar-c2{
  padding: 2px;
  width: 128rpx;
  height: 128rpx;
  background-color:#ccc;
  border-radius: 50%;
}
.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 0 auto;
  border-radius: 50%;
  opacity: 1;
  vertical-align: middle; 
}

.userinfo-nickname {
  flex: 2;
  color: white;
}

.my-order-head {
  background-color: white;
  height:44px;
  padding: 0 8px;
}

.my-order-head-label{
  flex: 1;
}
.my-order-icon{
  width: 20px;
  font-size:28px;
}
.view-all-orders{
  flex: 3;
  text-align: right;
  line-height: 44px;
  font-size: 14px;
  color:#aaa;
}
.my-order-status-list{
  background-color: white;
  height:77px;
  padding: 0 8px;
  border-top: solid 1px #f5f5f5;
}
.my-order-status-icon{
  font-size: 32px;
}
.my-order-status-item{
  flex:1;
  text-align: center;
  display: flex;
  flex-direction: column;
  align-items: center;
}
.my-order-status-text{
  font-size: 16px;
}
.my-manage-item{
  background-color: white;
  height:50px;
  padding: 0 8px;
  margin-top: 12px;
}
.my-manage-item-icon-c{
  flex: 1;
  color: white;
}
.my-manage-item-icon-c2{
  background-color: #e79102;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  text-align: center;
}
.my-manage-item-icon{
  vertical-align: middle;
}
.my-manage-item-text{
  flex: 7;
  text-align: left;
}