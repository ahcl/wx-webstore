.after-sale-list {
  flex: 1;
  width: 100%;
}

.after-sale-actions {
  height: 45px;
  line-height: 45px;
  width: 100%;
}

.after-sale {
  width: 100%;
  background-color: white;
  margin-bottom: 10px;
}

.after-sale-item-body {
  padding: 0 10px;
  height: 40px;
  line-height: 40px;
}

.item-type {
  flex: 1;
  text-align: left;
  font-size: 14px;
}
.item-order-id{
   text-align: right;
   font-size: 14px;
    color: #888;
}
.item-memo {
  flex: 2;
  text-align: left;
  font-size: 14px;
}
.item-orderId{
  flex: 1;
  text-align: left;
}
.item-status{
  text-align: right;
  font-size: 14px;
  color:red;
}
.after-sale-item-actions {
  padding: 0 10px;
  height: 40px;
  line-height: 40px;
  border-top: solid 1px #f5f5f5;
  font-size: 16px;
  color: #888;
}
.item-audit-result-name{
  flex: 1;
  text-align: left;
  font-size: 12px;
}
.item-audit-comment{
  flex: 2;
  text-align: left;
  font-size: 12px;
}