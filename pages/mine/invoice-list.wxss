.invoice-list {
  width: 100%;
}

.invoice-actions {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 45px;
  line-height: 45px;
}

.add-new-button {
  border-radius: 0;
  background-color: #f00;
  color:white;
}

.invoice {
  width: 100%;
  background-color: white;
  margin-bottom: 10px;
}

.invoice-item-body {
  padding: 0 10px;
  height: 40px;
  line-height: 40px;
}

.item-title {
  flex: 1;
  text-align: left;
  line-height: 20px;
  font-size: 16px;
}

.item-type-name {
  text-align: right;
  font-size: 14px;
  background-color: #f6680a;
  padding:5px;
  color:white;
}

.item-address-full {
  padding: 0 10px;
  height: 40px;
  line-height: 40px;
  font-size: 14px;
  color: #888;
}

.invoice-item-actions {
  padding: 0 10px;
  height: 40px;
  line-height: 40px;
  border-top: solid 1px #f5f5f5;
  font-size: 16px;
  color: #888;
}

.set-default-c {
  flex: 3;
}

.set-default-button {
  padding-left: 5px;
}

.set-default-icon {
  font-size: 20px;
}

.set-default-icon-selected {
  color: #f00;
}

.edit-c, .remove-c {
  flex: 1;
}

.remove-c {
  margin-left: 5px;
}

.edit-button-icon, .remove-button-icon {
  font-size: 20px;
}

.edit-button, .remove-button {
  padding-left: 5px;
  
}
