.invoice-details {
  width: 100%;
}

.invoice-details-actions {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 45px;
  line-height: 45px;
}

.invoice-details-action-row {
  display: flex;
}

.setDefaultIcon {
  flex: 0.5;
  text-align: right;
  color: #f00;
  padding-right: 10px;
  background-color: white;
  font-size: 16px;
  position: relative;
}

.defaultIcon {
  height: 24px !important;
  padding: 0;
  margin: 0;
  box-sizing: border-box;
  position: absolute;
  bottom: 10px;
  right: 8px;
}

.defaultIconText {
  color: green;
}

.setDefaultText {
  flex: 1.5;
  text-align: left;
  color: #b3b3b3;
  display: inline-block;
  background-color: white;
}

.save-button {
  flex: 2;
  border-radius: 0;
}

.invoice-details-label {
  font-size: 14px;
  padding: 10px 0;
  display: block;
}

.invoice-type-button {
  border: solid 1px #aaa;
  color: #888;
  background-color: white;
  margin-right: 10px;
}

.invoice-type-button-selected {
  color: #f00;
  border: solid 1px #f00;
}

.invoice-details-type, .invoice-details-title, .invoice-details-add-value-tax,
.invoice-details-content {
  background-color: white;
  padding: 10px;
  margin-top: 10px;
}

.title-type-item {
  height: 30px;
  line-height: 30px;
  padding: 0 10px;
}

.invoice-details-titleTypes-space {
  flex: 1;
}

.invoice-details-title-value {
  background-color: #f5f5f5;
}

.invoice-details-add-value-tax-item {
  height: 40px;
  line-height: 40px;
  padding: 0 10px;
}

.invoice-details-add-value-tax-item-label {
  font-size: 12px;
  padding: 5px 0;
  display: block;
  flex: 1;
}

.invoice-details-add-value-tax-item-value {
  height: 30px;
  line-height: 30px;
  padding: 0 10px;
  font-size: 12px;
  background-color: #f5f5f5;
  flex: 3;
}

.invoice-details-content-value {
  height: 30px;
  line-height: 30px;
  padding: 0 10px;
  text-align: left;
  align-self: flex-start;
}
