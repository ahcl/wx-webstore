<import src="../../components/quantity-regulator/quantity-regulator.wxml" />
<view class="container shopping-cart">
  <view wx:if="{{carts.length>0}}">
    <view class="h-flex cart-item" wx:for="{{carts}}" wx:for-item="cart" wx:key="cart.id">
      <view class="cart-img-c h-flex" data-cart-id="{{cart.id}}" bindtap="bindCheckbox">
        <text class="item-choose iconfont {{cart.selected?'icon-xuanzhong-01 set-default-icon-selected':'icon-weixuanzhong-01'}} set-default-icon"></text>
        <image class="item-img" src="../../images/cart.jpg"></image>
      </view>
      <view class="v-flex cart-other">
        <view class="h-flex">
          <text class="item-name">{{cart.spu_name}}</text>
          <view class="remove-c" data-cart-id="{{cart.id}}" bindtap="removeTap">
            <text class="remove-button iconfont {{'icon-shanchu-01'}} set-default-icon">删除</text>
          </view>
        </view>
        <text class="item-shipment-place">{{cart.spu_type}}</text>
        <view class="h-flex item-price-sales">
          <text class="item-sale-price">{{cart.spu_price}}</text>
        </view>
        <view class="item-skus-quantity-control">
          <template is="quantity-regulator" data="{{quantity:cart.quantity}}" />
        </view>
      </view>
    </view>
    <view class="cart-actions h-flex"  >
      <view class="amount-action" bindtap="bindSelectAll">
        <text class="item-choose iconfont {{selectedAllStatus?'icon-xuanzhong-01 set-default-icon-selected':'icon-weixuanzhong-01'}} set-default-icon"></text>
        <text class="choose-all">全选</text>
        <text></text>
      </view>
      <view class="button-action">
        <button class="add-new-button">结算</button>
      </view>
    </view>
  </view>
  <view wx:else>
    <text class="cart-null">当前购物车为空</text>
  </view>
</view>
<import src="../../components/wx-toast/wx-toast.wxml" />
<template is="wx-toast" data="{{toastOptions: toastOptions}}" />