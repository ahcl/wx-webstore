@import '../../components/quantity-regulator/quantity-regulator.wxss';
.shopping-cart {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.cart-item {
  width: 100%;
  height: 130px;
  padding: 0 20px;
  margin: 1px 0 0 0;
  background-color: white;
  margin-bottom: 20rpx;
  /*padding-bottom: 10px;*/
}
.cart-null{
  top: 50px !important;
  color:#aaa;
}
.cart-img-c {
  flex: 1;
  text-align: center;
  /*padding-top:10px;*/
}
.item-choose{
 vertical-align: middle;
}
.item-img {
  width: 100px;
  height: 100px;
  vertical-align: middle;
  padding: 0 20px;
}

.cart-other {
  flex: 2;
  height: 90px;
  vertical-align: middle;
}

.item-name {
  flex: 2;
  width: 100%;
  font-size: 16pt;
  font-weight: bold;
}
.item-shipment-place {
  flex: 1.5;
  width: 100%;
  font-size: 12px;
  color: #aaa;
}

.item-price-sales {
  flex: 2;
  width: 100%;
  /*margin-top: 40px;*/


}
.item-sale-price{
  font-size: 15pt;
  color: #ff0000;
  padding-right: 5px;
  margin-top:5px;
}
.item-sale-price::before{
  content: ' ￥';
  font-size: 15pt;
}

.item-sales-all {
  font-size: 16px;
  padding-right: 5px;
  color: #aaa;
}
.item-skus-quantity-control {
  text-align: right;
  flex:3;
  margin-bottom:-20px !important;
  margin-left: 60px;
}
.remove-c {
  margin-right: 5px;
}

.remove-button-icon {
  font-size: 20px;
}
.remove-button {
  padding-left: 5px;
  
}
.cart-actions {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50px;
  line-height: 50px;
}
.amount-action{
    flex: 1;
    background-color: white;  
    padding-left: 15px;   
}
.choose-all{
    padding:0 10px;
}
.choose-all::after{
    content: '合计：';
  font-size: 14px;
   padding:0 20px;
}
.button-action{
    flex:0.5;
    line-height: 50px;
}
.add-new-button {
  flex: 2;
  border-radius: 0;
  background-color: #f00;
  color:white;
  height: 50px;
}
