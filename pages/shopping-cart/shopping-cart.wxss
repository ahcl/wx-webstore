@import '../../components/quantity-regulator/quantity-regulator.wxss';
.shopping-cart {
  width: 100%;
  display: flex;
  flex-direction: column;
}
.cart-box{
   margin-bottom:100rpx;

}
.address-box{
  background-color: #fafbf9;
  /*margin: 10px 0 0 0;*/
  margin-bottom: 20rpx;
}
.addr-choose{
  padding-left:15px;
}
.adress-text{
  line-height: 45px;
  padding-left: 20px;
}
.cart-item {
  width: 100%;
  height: 160px;
  padding: 0 20px;
  /*margin: 1px 0 0 0;*/
  background-color: white;
  /*padding-bottom: 10px;*/
}
.cart-null{
  top: 50px !important;
  color:#aaa;
}
.cart-img-c {
  flex: 1;
  text-align: center;
  /*padding-top:10px;*/
}
.item-choose{
 vertical-align: middle;
}
.item-img {
  width: 100px;
  height: 100px;
  vertical-align: middle;
  padding: 0 20px;
}

.cart-other {
  flex: 2;
  height: 100px;
  vertical-align: middle;
}

.item-name {
  flex: 2;
  width: 100%;
  font-size: 14pt;
  font-weight: bold;
}
.item-shipment-place {
  /*flex: 1.5;*/
  width: 100%;
  font-size: 12px;
  color: #aaa;
}

.item-price-sales {
  flex:2.5;
  width: 100%;
  /*margin-top: 40px;*/
}
.item-sale-price{
  font-size: 17pt;
  color: #ff0000;
  padding-right: 5px;
  margin-top:5px;
}
.item-sale-price::before{
  content: ' ￥';
  font-size: 17pt;
}
.item-market-price {
  flex: 2.5;
  font-size: 15pt;
  color: #888;
  text-decoration: line-through;
}
.item-sales-all {
  flex: 1;
  font-size: 17px;
  padding-right: 5px;
  color: #aaa;
}
.item-skus-quantity-control {
  text-align: right;
  flex:3;
  margin-bottom:-30px !important;
  /*margin-right: 50px;*/
}
.remove-c {
  margin-right: 5px;
}

.remove-button-icon {
  font-size: 20px;
}
.remove-button {
  padding-left: 5px;
}
.cart-actions {
  position: fixed;
  left: 0;
  bottom: 0;
  width: 100%;
  height: 50px;
  line-height: 50px;
  z-Index:99999;
}
.amount-action{
    flex: 1;
    background-color: white;  
    padding-left: 15px;  
  
 
}
.choose-all{
    padding:0 10px;
}
.choose-all::after{
    content: '合计：';
  font-size: 14px;
   padding:0 20px;
}
.button-action{
    flex:0.5;
    line-height: 50px;
   
}
.settlement-button {
  flex: 2;
  border-radius: 0;
  background-color: #f00;
  color:white;
  height: 50px;
}
.settlement-button-disabled{
  background-color: #888;
}
